-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr    
      %th{:class=> @klassT}  
        = link_to "title", movies_path({:action=> "index", :orderby=>"title"}),{:id=>"title_header"} 

      %th Rating
      %th{:class=> @klassR}  
        = link_to "Release Date", movies_path({:action=> "index", :orderby=>'release_date'}), {:id=>"release_date_header"}
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
